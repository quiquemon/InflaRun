	function habilitarDialogError(dialog, message) {
		dialog.setTitle("Error en Inscripción");
		dialog.setMessage("<strong>Recuerda:</strong> " + message);
		dialog.setType(BootstrapDialog.TYPE_DANGER);
		dialog.setClosable(true);
